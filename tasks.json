{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++ Code",
            "type": "shell",
            "command": "g++",
            "args": ["-g", "cplusplus.cpp", "-o", "cplusplus"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
